{
	"compilerOptions": {
		"types": ["react"],
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@assets/*": ["assets/*"],
			"theme": ["path/to/your/theme/module"]
		},
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/theme/index.tsx"]
}
